#!/usr/bin/env php
<?php

if (dirname(__DIR__) == 'vendor')
    $vendor_dir = realpath(__DIR__.'/../');
else
    $vendor_dir = realpath(__DIR__.'/../vendor/');

if (is_dir($vendor_dir) && file_exists($vendor_dir.'/autoload.php'))
    require_once $vendor_dir.'/autoload.php';
else
    throw new \RuntimeException('Unable to determine location of composer autoload file.');

$application = new \FHIR\ComponentTests\Application();
$application->run();
