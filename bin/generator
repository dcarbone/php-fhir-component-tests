#!/usr/bin/env php
<?php

require_once __DIR__.'/../vendor/autoload.php';

define('ROOT_DIR', realpath(__DIR__.'/../').DIRECTORY_SEPARATOR);
define('SRC_DIR', ROOT_DIR.'src'.DIRECTORY_SEPARATOR);
define('TEST_CLASS_DIR', ROOT_DIR.'tests'.DIRECTORY_SEPARATOR);

if (!is_dir(TEST_CLASS_DIR))
{
    $ok = @mkdir(TEST_CLASS_DIR);
    if (!$ok)
        throw new \RuntimeException('Unable to create Test Class output directory, please check permissions.');
}

$application = new \FHIR\ComponentTests\Application();
$application->run();
